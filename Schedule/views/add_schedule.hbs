<head>
    <meta charset="utf-8" />
</head>
<div id="wrapper">

    <div id="header">
        <div class="nav">
            <ul>
                <li><a class="active" href="schedule_table">Расписание</a></li>
                <li><a href="/">Выход</a></li>
            </ul>
        </div>
    </div>
    <!-- #header -->

    <div id="content">
        <div class="card w-80">
            <div class="container">
                <h1 style="text-align: center">Добавить расписание экзаменов</h1>
            </div>
        </div>
        <form action="add_schedule/insert" method="post">
            <div class="card w-80">
                <div class="container">
                    <label for="select_group"><b>Группа </b></label>
                    <div class="custom-select">
                        <select id="select_group" name="select_group" required>
                            <option value="">Выбрать группу</option>
                        {{# each groups }}
                            <option value={{this._id }}> {{this.name}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <label for="date_time"><b>Дата и время</b></label>
                    <input type="datetime-local"  id="date_time" name="date_time" required>
                    <label for="select_course"><b>Дисциплина</b></label>
                    <div class="custom-select">
                        <select id="select_course" name="select_course" required>
                            <option value="">Выбрать дисциплину</option>
                            {{# each courses }}
                                <option value={{this._id }}> {{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <label for="select_lecturer"><b>Преподаватель</b></label>
                    <div class="custom-select" >
                        <select id="select_lecturer" name="select_lecturer" required>
                            <option value="">Выбрать преподавателя</option>
                            {{# each lecturers }}
                                <option value={{this._id }}> {{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit">Добавить расписание</button>
                </div>
            </div>
        </form>
    </div>
</div>

