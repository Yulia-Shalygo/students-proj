<div id="wrapper">

    <div id="header">
        <div class="nav">
            <ul>
                <li><a class="active" href="schedule_table">Расписание</a></li>
                <li><a href="add_schedule">Добавить расписание</a></li>
                <li><a href="/">Выход</a></li>
            </ul>
        </div>
    </div>
    <!-- #header -->

    <div id="content">
        <div class="card w-80">
            <div class="container">
                <h1 style="text-align: center">Расписание</h1>
            </div>
        </div>
        {{# each items }}
            <div class="card w-80">
                <div class="container">
                    <h1>{{ this.course_id }}</h1>
                    <div class="styling_text" id="item_1">
                        <p>
                            {{ this.date }}  Группа: {{ this.group }} Предмет: {{ this.course }} Преподаватель: {{ this.lecturer }}
                        </p>
                        <p>

                        </p>
                        <p style="text-align: right">
                                <a style="color: white" href="schedule_table/delete?id={{this.id}}">Удалить</a>
                                <a style="color: white" href="edit_schedule?id={{this.id}}">Редактировать</a>
                        </p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

